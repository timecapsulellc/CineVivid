# CineVivid Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ========================================
# CORE APPLICATION SETTINGS
# ========================================

# Application Environment
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8001
API_BASE_URL=http://localhost:8001

# ========================================
# AUTHENTICATION & SECURITY
# ========================================

# JWT Secret (MUST be changed in production)
SECRET_KEY=your-very-secure-secret-key-change-in-production-use-64-chars-min
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_ROUNDS=12

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL (Production)
DATABASE_URL=postgresql://user:password@localhost:5432/cinevivid

# SQLite (Development fallback)
# DATABASE_URL=sqlite:///./cinevivid.db

# Database options
DB_ECHO=false
AUTO_INIT_DB=true
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ========================================
# AI MODEL CONFIGURATION
# ========================================

# Hugging Face API Token (REQUIRED)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Default models
DEFAULT_T2V_MODEL=Skywork/SkyReels-V2-T2V-14B-540P
DEFAULT_I2V_MODEL=Skywork/SkyReels-V2-I2V-14B-540P
DEFAULT_DF_MODEL=Skywork/SkyReels-V2-DF-14B-540P

# Model caching
MODEL_CACHE_DIR=./models
MODEL_AUTO_DOWNLOAD=true
MODEL_OFFLOAD_CPU=true
USE_QUANTIZATION=false

# ========================================
# VOICE & AUDIO SERVICES
# ========================================

# ElevenLabs API Key (REQUIRED for voiceover)
# Get from: https://elevenlabs.io/app/profile
ELEVENLABS_API_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Default voice settings
DEFAULT_VOICE_ID=21m00Tcm4TlvDq8ikWAM
DEFAULT_VOICE_MODEL=eleven_monolingual_v1
VOICE_STABILITY=0.5
VOICE_SIMILARITY_BOOST=0.5

# ========================================
# BILLING & PAYMENT
# ========================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs for each tier
STRIPE_PRICE_PRO=price_xxxxxxxxxxxxxxxxx
STRIPE_PRICE_BUSINESS=price_xxxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxxxxxxxxxxx

# ========================================
# REDIS & CACHING
# ========================================

# Redis URL
REDIS_URL=redis://localhost:6379/0

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ========================================
# FILE STORAGE & MEDIA
# ========================================

# Local storage paths
VIDEOS_DIR=./videos
TEMP_DIR=./temp
UPLOADS_DIR=./uploads
STATIC_DIR=./static

# File size limits (in MB)
MAX_FILE_SIZE=100
MAX_VIDEO_DURATION=300
MAX_IMAGE_SIZE=10

# Video output settings
DEFAULT_VIDEO_QUALITY=540P
DEFAULT_FPS=24
SUPPORTED_FORMATS=mp4,webm,avi

# ========================================
# CLOUD STORAGE (Optional)
# ========================================

# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=cinevivid-videos

# Google Cloud Storage
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
# GCS_BUCKET_NAME=cinevivid-videos

# ========================================
# MONITORING & LOGGING
# ========================================

# Logging
LOG_FORMAT=json
LOG_FILE=./logs/cinevivid.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Sentry (Error tracking)
# SENTRY_DSN=https://xxxxxxxxxx@sentry.io/xxxxxxx

# ========================================
# EMAIL & NOTIFICATIONS
# ========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cinevivid.ai

# Notification settings
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFY_ON_VIDEO_COMPLETE=true
NOTIFY_ON_ERRORS=true

# ========================================
# RATE LIMITING & QUOTAS
# ========================================

# API Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# User quotas by tier
FREE_TIER_CREDITS=300
PRO_TIER_CREDITS=1000
BUSINESS_TIER_CREDITS=3000
ENTERPRISE_TIER_CREDITS=10000

# Generation limits
MAX_CONCURRENT_GENERATIONS=3
MAX_QUEUE_SIZE=100

# ========================================
# DEVELOPMENT & TESTING
# ========================================

# Development settings
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:1234,http://localhost:3001
ENABLE_DOCS=true
ENABLE_PLAYGROUND=true

# Testing
TEST_DATABASE_URL=sqlite:///./test_cinevivid.db
SKIP_SLOW_TESTS=false
MOCK_AI_SERVICES=false

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================

# Server settings
WORKERS=1
MAX_CONNECTIONS=1000
TIMEOUT=300
KEEPALIVE=2

# GPU settings
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8
ENABLE_GPU_MONITORING=true

# Background task settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=1
CELERY_TASK_TIMEOUT=1800

# ========================================
# FEATURE FLAGS
# ========================================

# Feature toggles
ENABLE_VIDEO_EXTENSION=true
ENABLE_CAMERA_DIRECTOR=true
ENABLE_BATCH_PROCESSING=false
ENABLE_API_KEYS=true
ENABLE_ADMIN_DASHBOARD=true

# Beta features
ENABLE_BETA_MODELS=false
ENABLE_ADVANCED_EDITING=false
ENABLE_COLLABORATIVE_EDITING=false

# ========================================
# BACKUP & MAINTENANCE
# ========================================

# Backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="CineVivid is currently under maintenance. Please try again later."

# ========================================
# ANALYTICS & TRACKING
# ========================================

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
ENABLE_USER_ANALYTICS=true
ENABLE_PERFORMANCE_TRACKING=true

# Usage tracking
TRACK_GENERATION_STATS=true
TRACK_USER_BEHAVIOR=false
ANONYMIZE_ANALYTICS=true

# ========================================
# LOCALIZATION
# ========================================

# Language settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja
ENABLE_AUTO_TRANSLATE=false

# Timezone
DEFAULT_TIMEZONE=UTC